@model BitFour.LojaVirtual.Web.Models.ProdutosViewModel
@using BitFour.LojaVirtual.Web.HtmlHelpers@*referencia da classe criada para usarmos a paginaçao*@

@foreach (var p in Model.Produtos)
{
    //foi criada a classe detalhes para refatorar o codigo e tambem poder usar em outras partes do sistema,classe parcial 
    @Html.Partial("ProdutoDetalhes",p)

}






@*Usando paginaçao criada*@
<div class="btn-group pull-right">  
    @Html.PageLinks(Model.Paginacao, x => Url.Action("ListaProdutos", new { pagina = x, categoria = @Model.CategoriaAtual }))
</div>