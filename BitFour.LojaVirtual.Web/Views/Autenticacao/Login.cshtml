@using System.Web.UI.WebControls
@model BitFour.LojaVirtual.Dominio.Entidades.Administrador
@{
    Layout = null;
}




<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/Error.css" rel="stylesheet" />

    <style type="text/css">
        .panel-heading {
            padding: 5px 15px;
        }

        .panel-footer {
            padding: 1px 15px;
            color: #A0A0A0;
        }

        .profile-img {
            width: 96px;
            height: 96px;
            margin: 0 auto 10px;
            display: block;
            -moz-border-radius: 50%;
            -webkit-border-radius: 50%;
            border-radius: 50%;
        }
    </style>
    <title> Login</title>
</head>
<body>
    <div class="container" style="margin-top: 40px">
        <div class="row">

            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">

                    <div class="panel-heading"> <strong> BitFour - Autenticação</strong></div>
                    <div class="panel-body">

                        
                        @using (Html.BeginForm("Login", "Autenticacao", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
                        {
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
                                    </div>
                                    @*<div style="padding-left: 50px;">@Html.ValidationSummary()</div>*@
                                </div>
                                <div class="row">
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"> </i>
                                                </span>
                                            <!--usando helpers para campos-->
                                            @Html.TextBoxFor(model => model.Login, new {@class = "form-control", placeholder = "Informe seu login"})
                                            <!--validando campos com validationMessageFor-->
                                            @Html.ValidationMessageFor(model => model.Login, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"> </i>
                                                </span>
                                            <!--helpers para campos e validation para validaçao-->
                                            @Html.PasswordFor(model => model.Senha, new {@class = "form-control", placeholder = "Informe sua seha"})
                                            @Html.ValidationMessageFor(model => model.Senha, "", new {@class = "text-danger"})
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Acessar">
                                        </div>
                                    </div>
                                </div>
                                    </div>
                            </fieldset>
                        }

                    </div>
                    <div class="panel-footer ">
                        &copy;Todos os direitos reservados.BitFour Technology
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
